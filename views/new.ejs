<script src='../public/js/index.js' pageType='new' defer></script>
<%- include('../views/partials/header.ejs') %>
    <div id='newForm'>
        <form id='newFormDiv' action='/al/new' method="POST">
            <fieldset>
                <label for='year'>Year</label>
                <select id='year' name='year' onchange='generateMakeOptions()'>
                    <option value='none'>Select Year</option>
                </select>
            </fieldset>
            <fieldset>
                <label for='make'>Make</label>
                <select id='make' id='make' name='make' onchange='generateModelOptions()'>
                </select>
            </fieldset>
            <fieldset>
                <label for='model'>Model</label>
                <select id='model' name='model' onchange='generateOptionOptions()'>
                </select>
            </fieldset>
            <fieldset>
                <label for='option'>Option</label>
                <select id='option' name='option' onchange='setAutoID()'>
                </select>
            <fieldset hidden>
                <input type='text' id='autoID' name='autoID'>
            </fieldset>
            </fieldset>
            <fieldset>
                <label for='mileage'>Mileage</label>
                <input type='text' id='mileage' name='mileage'>
            </fieldset>
            <fieldset>
                <label for='mileage'>Price</label>
                <input type='text' id='price' name='price'>
            </fieldset>
            <fieldset>
                <label for='img'>Image Link</label>
                <input type='text' id='img' name='img'>
            </fieldset>
            <button>Submit</button>
        </form>
    </div>
    <%- include('../views/partials/footer.ejs') %>